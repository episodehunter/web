    "uglifyjs-webpack-plugin": "1.2.5",
    "webpack": "4.8.0",
    "webpack-cli": "2.1.2",
    "webpack-dev-server": "3.1.4",
    "webpack-merge": "4.1.2"
  },
  "dependencies": {
    "@tjoskar/react-lazyload-img": "^1.0.3",
