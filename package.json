{
  "name": "web",
  "version": "0.0.1",
  "description": "episodehunter webpage",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc --noEmit",
    "test": "jest --watch",
    "test:ci": "jest --coverage",
    "build": "webpack --config webpack.prod.js && cp src/index.html build/index.html",
    "start": "webpack-dev-server --config webpack.dev.js",
    "deploy": "npm run build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/episodehunter/web.git"
  },
  "keywords": [
    "episodehunter"
  ],
  "author": "Oskar Karlsson <kontakta@oskarkarlsson.nu>",
  "contributors": [
    "Viktor Eriksson <me@viktoreriksson.se> (viktoreriksson.se)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/episodehunter/web/issues"
  },
  "homepage": "https://github.com/episodehunter/web#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@episodehunter/types": "github:episodehunter/types",
    "@types/history": "^4.7.2",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@types/react-test-renderer": "^16.9.0",
    "@types/styled-components": "^4.1.18",
    "babel-loader": "^8.0.6",
    "jest": "^24.8.0",
    "react-test-renderer": "^16.9.0",
    "simple-spy": "^3.0.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.1",
    "worker-loader": "^2.0.0"
  },
  "dependencies": {
    "@sentry/browser": "^5.6.1",
    "@tjoskar/react-lazyload-img": "^1.2.1",
    "date-fns": "^1.30.1",
    "firebase": "^6.3.5",
    "fuse.js": "^3.4.5",
    "graphql-request": "^1.8.2",
    "idb-keyval": "^3.2.0",
    "mitt": "^1.1.3",
    "mobx": "^5.13.0",
    "mobx-react-lite": "^1.4.1",
    "rc-progress": "^2.5.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^4.3.2",
    "the-react-router": "^1.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "testRegex": "src/.*(__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "./coverage/"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
