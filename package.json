  "description": "episodehunter webpage",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc --noEmit",
    "test": "jest --watch",
    "test:ci": "jest",
    "build": "webpack --config webpack.prod.js && cp src/index.html build/index.html",
    "start": "webpack-dev-server --hot --config webpack.dev.js"
