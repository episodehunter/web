{
  "name": "web",
  "version": "0.0.1",
  "description": "episodehunter webpage",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc --noEmit",
    "test": "jest --watch",
    "test:ci": "jest --coverage",
    "build": "webpack --config webpack.prod.js && cp src/index.html build/index.html",
    "start": "webpack-dev-server --hot --config webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/episodehunter/web.git"
  },
  "keywords": [
    "episodehunter"
  ],
  "author": "Oskar Karlsson <kontakta@oskarkarlsson.nu>",
  "contributors": [
    "Viktor Eriksson <me@viktoreriksson.se> (viktoreriksson.se)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/episodehunter/web/issues"
  },
  "homepage": "https://github.com/episodehunter/web#readme",
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/plugin-proposal-decorators": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.0.0",
    "@types/history": "4.6.2",
    "@types/jest": "23.0.0",
    "@types/ramda": "^0.25.33",
    "@types/react": "16.3.14",
    "@types/react-dom": "16.0.5",
    "@types/react-test-renderer": "16.0.1",
    "babel-loader": "8.0.0-beta.2",
    "jest": "23.1.0",
    "react-test-renderer": "16.4.0",
    "simple-spy": "2.2.1",
    "ts-jest": "22.4.6",
    "typescript": "2.9.2",
    "uglifyjs-webpack-plugin": "1.2.5",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.4",
    "webpack-dev-server": "3.1.4",
    "webpack-merge": "4.1.2"
  },
  "dependencies": {
    "@tjoskar/react-lazyload-img": "^1.1.0",
    "@vieriksson/the-react-router": "^1.1.2",
    "date-fns": "^1.29.0",
    "firebase": "^5.0.4",
    "fuse.js": "^3.2.0",
    "graphql-request": "^1.5.1",
    "idb-keyval": "^3.0.3",
    "mobx": "^4.2.1",
    "mobx-react": "^5.1.2",
    "mobx-utils": "^4.0.1",
    "path-to-regexp": "^2.2.1",
    "ramda": "^0.25.0",
    "rc-progress": "^2.2.5",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.2",
    "rxjs": "^6.0.0",
    "styled-components": "^3.2.6"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*(__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "./coverage/"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
